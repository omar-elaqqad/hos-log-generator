{
  "version": 2,
  "builds": [
    {
      "src": "vercel-build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    },
    {
      "src": "triplog_backend/triplog_backend/wsgi.py",
      "use": "@vercel/python"
    },
    {
      "src": "triplog_frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/triplog_frontend/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/triplog_frontend/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/triplog_frontend/manifest.json"
    },
    {
      "src": "/api/(.*)",
      "dest": "triplog_backend/triplog_backend/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/triplog_frontend/index.html"
    }
  ]
}