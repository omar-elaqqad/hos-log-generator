{
  "version": 2,
  "builds": [
    {
      "src": "triplog_backend/triplog_backend/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "triplog_frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "triplog_frontend/build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "your_backend_directory_name/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "your_frontend_directory_name/build/$1"
    }
  ]
}